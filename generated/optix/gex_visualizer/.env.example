# GEX Visualizer Configuration

# Application
APP_NAME=GEX Visualizer
APP_VERSION=1.0.0
DEBUG=False

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://gex_user:gex_pass@localhost:5432/gex_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# GEX Calculation Settings
RISK_FREE_RATE=0.05
TRADING_DAYS_PER_YEAR=252

# Alert Thresholds
GAMMA_FLIP_THRESHOLD_PCT=5.0
PIN_RISK_DAYS_TO_EXPIRY=5
HIGH_GEX_THRESHOLD=1000000000

# Data Storage
HISTORICAL_DATA_DAYS=365

# Market Data API (Optional)
OPTIONS_CHAIN_API_URL=
OPTIONS_CHAIN_API_KEY=

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
