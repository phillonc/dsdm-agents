# OPTIX Backtester Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://optix:optix@localhost:5432/optix_backtester

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Backtesting Configuration
DEFAULT_INITIAL_CAPITAL=100000.0
DEFAULT_COMMISSION_PER_CONTRACT=0.65
DEFAULT_SLIPPAGE_PERCENT=0.1

# Monte Carlo Configuration
MONTE_CARLO_ITERATIONS=1000

# Walk-Forward Configuration
WALK_FORWARD_TRAIN_RATIO=0.7
WALK_FORWARD_TEST_PERIODS=5

# Performance Configuration
RISK_FREE_RATE=0.04
TRADING_DAYS_PER_YEAR=252

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Performance Tuning
MAX_WORKERS=4
BATCH_SIZE=1000
